<!DOCTYPE html>
<html lang="en">
{% include 'base.head.dashboard.html.twig' %}

<body>
<div class="container-xxl position-relative bg-white d-flex p-0">
    {% include 'base.sliderbar.dashboard.twig' %}


    <!-- Content Start -->
    <div class="content">
        {% include 'base.start.content.html.twig' %}
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="index.html" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">EMPROMED</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="{{ asset('img/jfeprod.jpg') }}" alt="" style="width: 50px; height: 50px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Jhon Doe</h6>
                        <span>Drc. Prod</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="dashboard" class="nav-item nav-link "><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a href="tproduction" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Produccion</a>
                    <a href="tworker" class="nav-item nav-link  active"><i class="fa fa-table me-2"></i>Trabajadores</a>
                    <a href="report" class="nav-item nav-link" ><i class="fa fa-file-alt me-2"></i>Reportes</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->


        <!--Table Start -->
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Tabla de Trabajadores</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">CI</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Edad</th>
                            <th scope="col">Sexo</th>
                            <th scope="col">Posicion</th>
                            <th scope="col">Anos de experiencia</th>
                            <th scope="col">Salario</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for worker in workers %}
                            <tr>
                                <th scope="row">{{ worker.getId()}}</th>
                                <td>{{ worker.getName()}}</td>
                                <td>{{ worker.getAge()}}</td>
                                <td>{{ worker.getSex()}}</td>
                                <td>{{ worker.getPosition()}}</td>
                                <td style="text-align: center">{{ worker.getYearExperiences()}}</td>
                                <td>{{ worker.getSalario()}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--Table End -->


        {% include 'base.footer.html.twig' %}
    </div>
    <!-- Content End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>
{% include'base.library.js.html.twig'%}
</body>

</html>